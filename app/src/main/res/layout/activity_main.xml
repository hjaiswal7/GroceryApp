<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:descendantFocusability="blocksDescendants">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/carrot"
                        android:layout_centerHorizontal="true"
                        android:layout_width="26.48dp"
                        android:layout_height="30.8dp"
                        android:background="@drawable/img"/>

                    <!-- DEMO -->
                    <TextView
                        android:layout_below="@+id/carrot"
                        android:id="@+id/demo"
                        android:layout_width="46dp"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_height="18dp"
                        android:text="@string/demo"
                        android:textAppearance="@style/demo"
                        android:lineSpacingExtra="1sp"
                        android:translationY="-0.47sp"
                        android:gravity="center_horizontal|top"
                        />



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Rectangle 19 -->
                    <SearchView
                        android:id="@+id/searchView"
                        android:layout_width="364dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="23.39dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/searchview_background"
                        android:iconifiedByDefault="false"
                        android:queryBackground="@android:color/transparent"
                        android:queryHint="Search Store"
                        android:searchHintIcon="@drawable/img_1" />



                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <androidx.cardview.widget.CardView
                        android:layout_centerInParent="true"
                        android:layout_width="367dp"
                        android:layout_height="114.99dp"
                        app:cardCornerRadius="8dp"

                        app:cardUseCompatPadding="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/banner"
                            android:scaleType="fitXY" />

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/exclusive_o"
                            android:layout_width="161dp"
                            android:layout_height="29dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="24.71dp"
                            android:layout_marginTop="36.96dp"
                            android:gravity="top"
                            android:text="@string/exclusive_o"
                            android:textAppearance="@style/exclusive_o"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/see_all"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="325.71dp"
                            android:layout_marginTop="37dp"
                            android:gravity="top"
                            android:text="@string/see_all"
                            android:textAppearance="@style/see_all" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/exclusiveRecycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/groceries"
                            android:layout_width="161dp"
                            android:layout_height="29dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="24.71dp"
                            android:layout_marginTop="36.96dp"
                            android:gravity="top"
                            android:text="@string/groceries"
                            android:textAppearance="@style/exclusive_o"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/see_all_g"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="325.71dp"
                            android:layout_marginTop="37dp"
                            android:gravity="top"
                            android:text="@string/see_all"
                            android:textAppearance="@style/see_all" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/groceriesRecycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/best_sellin"
                            android:layout_width="161dp"
                            android:layout_height="29dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="24.71dp"
                            android:layout_marginTop="36.96dp"
                            android:gravity="top"
                            android:text="@string/best_sellin"
                            android:textAppearance="@style/exclusive_o"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/see_all_B"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="325.71dp"
                            android:layout_marginTop="37dp"
                            android:gravity="top"
                            android:text="@string/see_all"
                            android:textAppearance="@style/see_all" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/bestSellingRecycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>